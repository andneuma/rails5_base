= devise_error_messages!
.container
  #content
    .row
      .heading.text-center
        %h1 Reset password
      .col-sm-8.col-sm-offset-2
        .well.panel-wrap
          .panel
            .panel-body
              = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
                %legend Send me password reset instructions
                %fieldset
                  .form-group.float-label-control.required
                    = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control'
                  .form-group.float-label-control.required
                    = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block'
                  .clearfix
                  .register-or-resetpw.top15
                    %small
                      = link_to("Sign up", new_registration_path(resource_name)) if devise_mapping.registerable? && controller_name != 'registrations'
