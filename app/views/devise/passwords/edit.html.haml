= devise_error_messages!
.container
  %h2 Change your password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.hidden_field :reset_password_token
    .row
      .col-xs-12
        = f.label :password, "New password", placeholder: "(#{@minimum_password_length} characters minimum)"
        = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
      .col-xs-12
        = f.label :password_confirmation, "Confirm new password"
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "(#{@minimum_password_length} characters minimum)"
    .row.button-row
      .col-xs-12
        = f.submit "Change my password"
    = render "devise/shared/links"
