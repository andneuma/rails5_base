= devise_error_messages!
.container
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .row
      .col-xs-12
        = f.label :email, 'Email*'
        = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control'
      .col-xs-12
        = f.label :name, 'Name'
        = f.text_field :name, autofocus: true, placeholder: 'Name', class: 'form-control'
      .col-xs-12.col-md-6
        = f.label :password, 'Password*'
        %em= "(#{@minimum_password_length} characters minimum)" if @minimum_password_length
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      .col-xs-12.col-md-6
        = f.label :password_confirmation, 'Confirm password*'
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .row.button-row
      .col-xs-12
        = f.submit "Sign up", class: 'btn btn-success btn-small'
    = render "devise/shared/links"
