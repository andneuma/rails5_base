= devise_error_messages!
.container
  #content
    .row
      .heading.text-center
        %h1 Sign up
      .col-sm-8.col-sm-offset-2
        .well.panel-wrap
          .panel
            .panel-body
              = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                %legend Register a new account
                %fieldset
                  - 1.upto(Setting.current_settings.activation_tokens_required) do |index|
                    .form-group.float-label-control.required
                      = f.label 'Activation token', "Activation token #{index}", class: 'activation-token-field'
                      = text_field_tag "activation_token#{index}", '', class: 'form-control'
                  .form-group.float-label-control.required
                    = f.label :email, 'Email*'
                    = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control'
                  .form-group.float-label-control.required
                    = f.label :name, 'Name'
                    = f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control'
                  .form-group.float-label-control.required
                    = f.label :password, 'Password*'
                    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "(#{@minimum_password_length} characters minimum)" if @minimum_password_length
                  .form-group.float-label-control.required
                    = f.label :password_confirmation, 'Confirm password*'
                    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "(#{@minimum_password_length} characters minimum)" if @minimum_password_length
                  .form-group
                    = f.submit "Sign up", class: 'btn btn-primary btn-block'
                  .clearfix
